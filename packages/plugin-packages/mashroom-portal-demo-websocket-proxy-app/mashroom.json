{
    "$schema": "../../../node_modules/@mashroom/mashroom-json-schemas/schemas/mashroom-plugins.json",
    "devModeBuildScript": "build",
    "plugins": [
        {
            "name": "Mashroom Portal Demo WebSocket Proxy App",
            "type": "portal-app2",
            "clientBootstrap": "startWebSocketProxyDemoApp",
            "resources": {
                "js": [
                    "bundle.js"
                ]
            },
            "screenshots": [
                "screenshot.png"
            ],
            "local": {
                "resourcesRoot": "./dist"
            },
            "defaultConfig": {
                "title": "Demo WebSocket Proxy App",
                "description": {
                    "en": "A simple Microfrontend that demonstrates how the Mashroom Portal proxy can be used to connect to a WebSocket server which cannot be reached directly by the client",
                    "de": "Ein einfaches Microfrontend das demonstriert wie man den Mashroom Portal Proxy verwenden kann um einen WebSocket Server anzusprechen, der nicht direkt vom Client erreichbar ist"
                },
                "category": "Demo",
                "defaultRestrictViewToRoles": [
                    "Authenticated"
                ],
                "proxies": {
                    "echo": {
                        "targetUri": "ws://ws.ifelse.io/",
                        "restrictToRoles": [
                            "Authenticated"
                        ]
                    }
                }
            }
        }
    ]
}
