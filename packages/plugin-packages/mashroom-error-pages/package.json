{
    "name": "@mashroom/mashroom-error-pages",
    "description": "Mashroom middleware to show proper HTML pages for arbitrary HTTP status codes (e.g. 404)",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.4",
    "files": [
        "dist/**",
        "pages/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "^2.9.4",
        "@mashroom/mashroom-i18n": "^2.9.4",
        "@mashroom/mashroom-utils": "2.9.3",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Error Pages Middleware",
                "type": "middleware",
                "bootstrap": "./dist/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": -20,
                    "mapping": {
                        "403": "./pages/403.html",
                        "404": "./pages/404.html",
                        "default": "./pages/default.html"
                    }
                }
            }
        ]
    }
}
