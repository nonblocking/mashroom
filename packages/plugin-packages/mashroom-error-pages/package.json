{
    "name": "@mashroom/mashroom-error-pages",
    "description": "Mashroom middleware to show proper HTML pages for arbitrary HTTP status codes (e.g. 404)",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.1",
    "files": [
        "dist/**",
        "pages/**"
    ],
    "dependencies": {
        "get-uri": "^4.0.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "1.9.1",
        "@mashroom/mashroom-i18n": "1.9.1",
        "@mashroom/mashroom-utils": "1.9.1",
        "@babel/cli": "^7.16.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.10",
        "eslint": "^8.3.0",
        "jest": "^27.3.1",
        "typescript": "^4.5.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$"
    },
    "scripts": {
        "lint": "eslint src --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Error Pages Middleware",
                "type": "middleware",
                "bootstrap": "./dist/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": -20,
                    "mapping": {
                        "403": "./pages/403.html",
                        "404": "./pages/404.html",
                        "default": "./pages/default.html"
                    }
                }
            }
        ]
    }
}
