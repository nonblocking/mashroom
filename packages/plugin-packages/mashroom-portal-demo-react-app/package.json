{
    "name": "@mashroom/mashroom-portal-demo-react-app",
    "description": "Simple React based App that integrates into the Portal",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.1",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@mashroom/mashroom-portal": "1.9.1",
        "@types/react": "^17.0.21",
        "@types/react-dom": "^17.0.9",
        "cpy-cli": "^3.1.1",
        "eslint": "^7.32.0",
        "jest": "^27.2.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.4.3",
        "webpack": "^5.53.0",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.2.1"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production && cpy ./screenshot.png dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo React App",
                "title": "Demo React App",
                "type": "portal-app",
                "bootstrap": "startReactDemoApp",
                "category": "Demo",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "screenshots": [
                    "screenshot.png"
                ],
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "appConfig": {
                        "firstName": "Jimmy",
                        "pingButtonLabel": "Send Ping"
                    }
                }
            }
        ]
    }
}
