{
    "name": "@mashroom/mashroom-helmet",
    "description": "Adds the Helmet middleware which sets a bunch of protective HTTP headers",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.2.0",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "helmet": "^6.0.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.2.0"
    },
    "scripts": {
        "lint": "eslint src --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Helmet Middleware",
                "type": "middleware",
                "bootstrap": "./dist/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": 200,
                    "helmet": {
                        "contentSecurityPolicy": false,
                        "crossOriginEmbedderPolicy": false,
                        "crossOriginOpenerPolicy": {
                            "policy": "same-origin-allow-popups"
                        },
                        "crossOriginResourcePolicy": {
                            "policy": "same-site"
                        },
                        "expectCt": false,
                        "referrerPolicy": false,
                        "hsts": {
                            "maxAge": 31536000
                        },
                        "noSniff": true,
                        "originAgentCluster": false,
                        "dnsPrefetchControl": {
                            "allow": false
                        },
                        "ieNoOpen": false,
                        "frameguard": {
                            "action": "sameorigin"
                        },
                        "permittedCrossDomainPolicies": false,
                        "hidePoweredBy": false,
                        "xssFilter": true
                    }
                }
            }
        ]
    }
}
