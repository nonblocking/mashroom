{
    "name": "@mashroom/mashroom-helmet",
    "description": "Adds the Helmet middleware which sets a bunch of protective HTTP headers",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "helmet": "^3.21.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@mashroom/mashroom": "1.1.1",
        "eslint": "^6.4.0",
        "express": "^4.17.1"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Helmet Middleware",
                "type": "middleware",
                "bootstrap": "./dist/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": 200,
                    "helmet": {
                        "contentSecurityPolicy": false,
                        "dnsPrefetchControl ": {
                            "allow": false
                        },
                        "expectCt": false,
                        "featurePolicy": false,
                        "frameguard": {
                            "action": "deny"
                        },
                        "hidePoweredBy": false,
                        "hsts": {
                            "maxAge": 31536000
                        },
                        "ieNoOpen": false,
                        "noSniff": {},
                        "permittedCrossDomainPolicies": false,
                        "referrerPolicy": false,
                        "xssFilter": {
                            "mode": null
                        }
                    }
                }
            }
        ]
    }
}
