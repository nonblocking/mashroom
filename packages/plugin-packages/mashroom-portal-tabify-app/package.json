{
    "name": "@mashroom/mashroom-portal-tabify-app",
    "description": "App that turns an app area into a tabbed dialog",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.8.2",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.14.5",
        "@mashroom/mashroom-portal": "1.8.2",
        "@types/react": "^17.0.15",
        "@types/react-dom": "^17.0.9",
        "eslint": "^7.32.0",
        "jest": "^27.0.6",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.3.5",
        "webpack": "^5.48.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --mode development --hot",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Tabify App",
                "type": "portal-app",
                "bootstrap": "startPortalTabifyApp",
                "category": "Layout",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {
                        "addCloseButtons": false,
                        "pluginNameTitleMapping": {
                            "My App": "The title to display"
                        },
                        "fixedTabTitles": []
                    }
                }
            }
        ]
    }
}
