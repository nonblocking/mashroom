{
    "name": "@mashroom/mashroom-portal-tabify-app",
    "description": "This Mashroom Portal App turns any app area where it is placed automatically into a tabbed container",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.1",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom-portal": "1.9.1",
        "@babel/cli": "^7.16.0",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "eslint": "^8.3.0",
        "jest": "^27.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.6.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --mode development --hot",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Tabify App",
                "type": "portal-app",
                "clientBootstrap": "startPortalTabifyApp",
                "category": "Layout",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "title": {
                        "en": "Tabify App",
                        "de": "Reiterisierung App"
                    },
                    "appConfig": {
                        "addCloseButtons": false,
                        "pluginNameTitleMapping": {
                            "My App": "The title to display"
                        },
                        "fixedTabTitles": []
                    }
                }
            }
        ]
    }
}
