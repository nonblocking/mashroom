{
    "name": "@mashroom/mashroom-csrf-protection",
    "description": "Mashroom CSRF protection middleware and services",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.7.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "csrf": "^3.1.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.7.1",
        "@mashroom/mashroom-utils": "2.7.1",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom CSRF Services",
                "type": "services",
                "namespace": "csrf",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "saltLength": 8,
                    "secretLength": 18
                }
            },
            {
                "name": "Mashroom CSRF Middleware",
                "type": "middleware",
                "bootstrap": "./dist/middleware/mashroom-bootstrap-middleware.js",
                "requires": [
                    "Mashroom CSRF Services"
                ],
                "defaultConfig": {
                    "order": 100,
                    "safeMethods": [
                        "GET",
                        "HEAD",
                        "OPTIONS"
                    ]
                }
            }
        ]
    }
}
