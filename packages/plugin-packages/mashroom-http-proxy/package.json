{
    "name": "@mashroom/mashroom-http-proxy",
    "description": "Mashroom http proxy service",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.1.0",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "http-proxy": "^1.18.1",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.1.0",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.1.0",
        "@mashroom/mashroom-security": "2.1.0",
        "@mashroom/mashroom-utils": "2.1.0",
        "@types/express": "^4.17.13",
        "@types/http-proxy": "^1.17.9",
        "@types/request": "^2.48.8",
        "@types/ws": "^8.5.3",
        "ws": "^8.7.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Http Proxy Services",
                "type": "services",
                "namespace": "proxy",
                "bootstrap": "./dist/proxy/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "forwardMethods": [
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                    ],
                    "forwardHeaders": [
                        "accept",
                        "accept-*",
                        "range",
                        "expires",
                        "cache-control",
                        "last-modified",
                        "content-*",
                        "uber-trace-id",
                        "uberctx-",
                        "b3",
                        "x-b3-*",
                        "trace*"
                    ],
                    "rejectUnauthorized": true,
                    "poolMaxSockets": 10,
                    "socketTimeoutMs": 30000,
                    "keepAlive": true,
                    "retryOnReset": true,
                    "proxyImpl": "default"
                }
            },
            {
                "name": "Mashroom Http Proxy Interceptor Plugin Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-plugin-loader.js",
                "loads": "http-proxy-interceptor"
            }
        ]
    }
}
