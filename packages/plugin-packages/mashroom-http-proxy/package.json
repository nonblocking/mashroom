{
    "name": "@mashroom/mashroom-http-proxy",
    "description": "Mashroom http proxy service",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.5.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "request": "^2.88.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.5.1",
        "@mashroom/mashroom-monitoring-metrics-collector": "1.5.1",
        "@mashroom/mashroom-security": "1.5.1",
        "@mashroom/mashroom-utils": "1.5.1",
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.1",
        "@types/request": "^2.48.5",
        "eslint": "^7.0.0",
        "jest": "^26.0.1",
        "nock": "^12.0.3",
        "typescript": "^3.8.3"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions '.ts'"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Http Proxy Services",
                "type": "services",
                "namespace": "proxy",
                "bootstrap": "./dist/proxy/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "forwardMethods": [
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                    ],
                    "forwardHeaders": [
                        "accept",
                        "accept-*",
                        "range",
                        "expires",
                        "cache-control",
                        "last-modified",
                        "content-*",
                        "uber-trace-id",
                        "uberctx-",
                        "b3",
                        "x-b3-*",
                        "trace*"
                    ],
                    "rejectUnauthorized": true,
                    "poolMaxSockets": 10,
                    "socketTimeoutMs": 30000
                }
            }
        ]
    }
}
