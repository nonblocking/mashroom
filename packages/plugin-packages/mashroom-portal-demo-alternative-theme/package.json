{
    "name": "@mashroom/mashroom-portal-demo-alternative-theme",
    "description": "Alternative Portal Theme Demo",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.0.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "express-react-views": "^0.11.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@mashroom/mashroom": "2.0.1",
        "@mashroom/mashroom-portal": "2.0.1",
        "@mashroom/mashroom-portal-ui-commons": "2.0.1",
        "@types/express": "^4.17.13",
        "@types/react": "^17.0.38",
        "bootstrap": "^5.1.3",
        "express": "^4.17.2"
    },
    "scripts": {
        "lint": "eslint --ext .ts --ext .tsx src --fix",
        "type-check": "tsc --noEmit",
        "dev": "nodemon --watch src --watch views -e ts,tsx,scss --exec \"npm run build && node dist/plugin/dev_server.js\"",
        "build:backend": "babel src/backend -d dist --extensions .ts,.tsx",
        "build:frontend": "webpack --mode production",
        "build:style": "sass --style compressed --no-source-map --load-path=. src/frontend/sass/portal.scss:dist/public/portal.css src/frontend/sass/admin.scss:dist/public/admin.css",
        "build:copy-assets": "cpy assets dist/public/assets && cpy . ../../../dist/public/fontawesome --cwd=node_modules/@fortawesome/fontawesome-free --parents",
        "build": "npm run build:backend && npm run build:frontend && npm run build:style && npm run build:copy-assets"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo Alternative Theme",
                "type": "portal-theme",
                "bootstrap": "./dist/plugin/mashroom-bootstrap.js",
                "resourcesRoot": "./dist/public",
                "views": "./dist/views"
            }
        ]
    }
}
