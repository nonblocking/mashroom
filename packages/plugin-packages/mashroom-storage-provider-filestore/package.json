{
    "name": "@mashroom/mashroom-storage-provider-filestore",
    "description": "Simple Mashroom storage provider based on JSON files",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.8.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "fs-extra": "^11.2.0",
        "mingo": "^6.5.1",
        "nanoid": "^3.3.8",
        "proper-lockfile": "^4.1.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.8.1",
        "@mashroom/mashroom-storage": "2.8.1",
        "@mashroom/mashroom-utils": "2.8.1",
        "@types/fs-extra": "^11.0.4",
        "@types/proper-lockfile": "^4.1.4"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Storage Filestore Provider",
                "type": "storage-provider",
                "bootstrap": "./dist/storage/mashroom-bootstrap.js",
                "defaultConfig": {
                    "dataFolder": "./data/storage",
                    "checkExternalChangePeriodMs": 100,
                    "prettyPrintJson": true
                }
            }
        ]
    }
}
