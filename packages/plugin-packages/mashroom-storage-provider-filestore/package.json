{
    "name": "@mashroom/mashroom-storage-provider-filestore",
    "description": "Simple Mashroom storage provider based on JSON files",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.5.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "fs-extra": "^9.0.0",
        "lodash.filter": "^4.6.0",
        "proper-lockfile": "^4.1.1",
        "shortid": "^2.2.15"
    },
    "devDependencies": {
        "@babel/cli": "7.8.4",
        "@mashroom/mashroom": "1.5.1",
        "@mashroom/mashroom-storage": "1.5.1",
        "@mashroom/mashroom-utils": "1.5.1",
        "@types/fs-extra": "^8.1.0",
        "@types/jest": "^25.2.2",
        "@types/lodash.filter": "^4.6.6",
        "@types/proper-lockfile": "^4.1.1",
        "@types/shortid": "^0.0.29",
        "eslint": "7.0.0",
        "jest": "26.0.1",
        "typescript": "^3.8.3"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src test --ext '.ts' --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions '.ts'"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Storage Filestore Provider",
                "type": "storage-provider",
                "bootstrap": "./dist/storage/mashroom-bootstrap.js",
                "defaultConfig": {
                    "dataFolder": "./data/storage",
                    "checkExternalChangePeriodMs": 2000,
                    "prettyPrintJson": true
                }
            }
        ]
    }
}
