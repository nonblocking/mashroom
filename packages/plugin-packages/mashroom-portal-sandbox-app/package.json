{
    "name": "@mashroom/mashroom-portal-sandbox-app",
    "description": "This App can be used to load any other Portal App with a specific configuration and to interact with the App via Message Bus. Can also be used for end-2-end testing with tools such as Selenium.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.7.2",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.12.16",
        "@mashroom/mashroom": "1.7.2",
        "@mashroom/mashroom-portal": "1.7.2",
        "@mashroom/mashroom-portal-ui-commons": "1.7.2",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@types/react-redux": "^7.1.16",
        "@types/redux-form": "^8.3.1",
        "duplicate-package-checker-webpack-plugin": "^3.0.0",
        "eslint": "^7.20.0",
        "jest": "^26.6.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-intl": "^5.12.3",
        "react-redux": "7.2.2",
        "redux": "^4.0.5",
        "redux-form": "^8.3.7",
        "typescript": "^4.1.5",
        "webpack": "^4.46.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Sandbox App",
                "type": "portal-app",
                "bootstrap": "startSandboxApp",
                "category": "Testing",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {}
                }
            }
        ]
    }
}
