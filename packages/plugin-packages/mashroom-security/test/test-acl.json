{
    "/portal/public-site/**": {
        "*": {
            "allow": "any"
        }
    },
    "/portal/**": {
        "*": {
            "allow": ["User"]
        },
        "DELETE": {
            "deny": "any"
        }
    },
    "/portal2": {
        "*": {
            "allow": ["User"]
        }
    },
    "/foo/*/bar": {
        "*": {
            "allow": ["User"],
            "deny": ["Manager"]
        }
    },
    "/a/*/bit/**/more/complicated": {
        "*": {
            "allow": ["User"]
        }
    },
    "invalid/pattern": {
        "*": {
            "allow": ["User"]
        }
    }
}
