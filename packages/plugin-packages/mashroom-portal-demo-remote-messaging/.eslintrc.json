{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "flowtype"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "settings": {
        "react": {
            "version": "16.6"
        }
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    }
}
