{
    "name": "@mashroom/mashroom-portal-demo-remote-messaging",
    "description": "Simple app that demonstrates remote messaging",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.6.0",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "@mashroom/mashroom": "1.6.0",
        "@mashroom/mashroom-portal": "1.6.0",
        "@mashroom/mashroom-portal-ui-commons": "1.6.0",
        "@mashroom/mashroom-utils": "1.6.0",
        "duplicate-package-checker-webpack-plugin": "^3.0.0",
        "eslint": "^7.13.0",
        "jest": "^26.6.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-intl": "^5.9.2",
        "react-redux": "7.2.2",
        "redux": "^4.0.5",
        "redux-form": "^8.3.6",
        "shortid": "^2.2.16",
        "webpack": "^4.44.2",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "dev": "webpack serve --mode development --hot",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo Remote Messaging App",
                "title": "Demo Remote Messaging App",
                "type": "portal-app",
                "bootstrap": "startRemoteMessagingDemoApp",
                "category": "Demo",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {}
                }
            }
        ]
    }
}
