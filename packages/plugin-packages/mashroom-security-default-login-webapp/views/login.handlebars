<!doctype html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link sizes="16x16 32x32" rel="icon" href="{{baseUrl}}/assets/logo-primary.ico">

    <link rel="stylesheet" type="text/css" href="{{baseUrl}}/style.css">

    <title>{{pageTitle}}</title>
</head>
<body>
    <header>
        <div class="logo"></div>
        <div class="page-title">
            <h1>{{pageTitle}}</h1>
        </div>
    </header>
    <main>
        <div class="login">
            <div class="login-form-title">
                <h2>{{loginFormTitle}}</h1>
            </div>
            <div class="login-form">
                {{#if error}}
                    <div class="login-error">
                        {{error}}
                    </div>
                {{/if}}
                <form id="login-form" method="POST" action="?{{query}}">
                    <div class="login-form-row">
                        <div class="login-form-label">
                            <label for="username">{{__ "username"}}</label>
                        </div>
                        <div class="login-form-input">
                            <input type="text" name="_username" id="username" autocomplete="username" />
                        </div>
                    </div>
                    <div class="login-form-row">
                        <div class="login-form-label">
                            <label for="password">{{__ "password"}}</label>
                        </div>
                        <div class="login-form-input">
                            <input type="password" name="_password" id="password" autocomplete="current_password" />
                        </div>
                    </div>
                    <div class="login-form-row login-form-actions">
                        <input id="login-form-submit" type="submit" value="{{__ 'login'}}"/>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script type="application/javascript">
        document.getElementById('username').focus();
    </script>
</body>
</html>
