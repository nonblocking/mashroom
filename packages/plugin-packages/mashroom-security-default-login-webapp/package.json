{
    "name": "@mashroom/mashroom-security-default-login-webapp",
    "description": "The default login webapp, that will be available at /login",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.0",
    "files": [
        "dist/**",
        "assets/**",
        "views/**"
    ],
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "express-handlebars": "^5.3.3",
        "handlebars": "^4.7.7"
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@mashroom/mashroom": "1.9.0",
        "@mashroom/mashroom-browser-cache": "1.9.0",
        "@mashroom/mashroom-csrf-protection": "1.9.0",
        "@mashroom/mashroom-i18n": "1.9.0",
        "@mashroom/mashroom-security": "1.9.0",
        "@mashroom/mashroom-vhost-path-mapper": "1.9.0",
        "@types/body-parser": "^1.19.1",
        "@types/express": "^4.17.13",
        "@types/express-handlebars": "^5.3.1",
        "@types/express-session": "^1.17.4",
        "eslint": "^7.32.0",
        "node-sass": "^6.0.1",
        "node-sass-tilde-importer": "^1.0.2",
        "nodemon": "^2.0.12",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "lint": "eslint src --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "dev": "nodemon --watch src -e ts,scss --exec \"npm run build && node dist/dev_server.js\"",
        "build": "babel src/js --extensions \".ts\" -d dist && node-sass --importer=node_modules/node-sass-tilde-importer --output-style compressed src/sass/style.scss dist/style.css"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Security Default Login Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Security Services",
                    "Mashroom Internationalization Services",
                    "Mashroom Browser Cache Services"
                ],
                "defaultConfig": {
                    "path": "/login",
                    "loginFormTitle": null,
                    "styleFile": null
                }
            }
        ]
    }
}
