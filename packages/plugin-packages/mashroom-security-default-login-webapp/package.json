{
    "name": "@mashroom/mashroom-security-default-login-webapp",
    "description": "The default login webapp, that will be available at /login",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.0.1",
    "files": [
        "dist/**",
        "assets/**",
        "views/**"
    ],
    "dependencies": {
        "body-parser": "^1.19.1",
        "express-handlebars": "^6.0.2",
        "handlebars": "^4.7.7"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.0.1",
        "@mashroom/mashroom-browser-cache": "2.0.1",
        "@mashroom/mashroom-csrf-protection": "2.0.1",
        "@mashroom/mashroom-i18n": "2.0.1",
        "@mashroom/mashroom-security": "2.0.1",
        "@mashroom/mashroom-vhost-path-mapper": "2.0.1",
        "@types/body-parser": "^1.19.2",
        "@types/express": "^4.17.13",
        "@types/express-handlebars": "^6.0.0",
        "@types/express-session": "^1.17.4",
        "express": "^4.17.2"
    },
    "scripts": {
        "lint": "eslint src --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "dev": "nodemon --watch src -e ts,scss --exec \"npm run build && node dist/dev_server.js\"",
        "build": "babel src/js --extensions \".ts\" -d dist && sass --style compressed --no-source-map src/sass/style.scss dist/style.css"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Security Default Login Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Security Services",
                    "Mashroom Internationalization Services",
                    "Mashroom Browser Cache Services"
                ],
                "defaultConfig": {
                    "path": "/login",
                    "pageTitle": null,
                    "loginFormTitle": null,
                    "styleFile": null
                }
            }
        ]
    }
}
