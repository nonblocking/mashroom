{
    "name": "@mashroom/mashroom-session",
    "description": "Session middleware with configurable provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.2",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "express": "^4.21.2",
        "express-session": "^1.18.1"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.9.2",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.9.2",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.1"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Middleware",
                "type": "middleware",
                "bootstrap": "./dist/middleware/mashroom-bootstrap-middleware.js",
                "defaultConfig": {
                    "order": -100,
                    "provider": "memory",
                    "session": {
                        "secret": "pS2tZRCp5e3uU7RM",
                        "resave": false,
                        "saveUninitialized": false,
                        "cookie": {
                            "httpOnly": true,
                            "secure": false,
                            "sameSite": false
                        }
                    }
                }
            },
            {
                "name": "Mashroom Session Store Provider Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-plugin-loader.js",
                "loads": "session-store-provider"
            }
        ]
    }
}
