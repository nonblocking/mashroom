{
    "name": "@mashroom/mashroom-portal-demo-rest-proxy-app",
    "description": "A simple SPA that demonstrates how the Mashroom Portal proxy could be used to connect to a REST API that cannot be reached directly by the client",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.0.0-alpha.1",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom-portal": "2.0.0-alpha.1",
        "@mashroom/mashroom-portal-ui-commons": "2.0.0-alpha.1",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.24.2"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo Rest Proxy App",
                "type": "portal-app2",
                "clientBootstrap": "startRestProxyDemoApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ]
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "title": "Demo REST Proxy App",
                    "category": "Demo",
                    "defaultRestrictViewToRoles": [],
                    "proxies": {
                        "spaceXApi": {
                            "targetUri": "https://api.spacexdata.com/v4",
                            "restrictToRoles": []
                        }
                    }
                }
            }
        ]
    }
}
