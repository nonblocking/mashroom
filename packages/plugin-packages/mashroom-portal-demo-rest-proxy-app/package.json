{
    "name": "@mashroom/mashroom-portal-demo-rest-proxy-app",
    "description": "A simple SPA that demonstrates how the Mashroom Portal proxy could be used to connect to a REST API that cannot be reached directly by the client",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.2",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom-portal": "1.9.2",
        "@mashroom/mashroom-portal-ui-commons": "1.9.2",
        "@babel/cli": "^7.16.0",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "eslint": "^8.3.0",
        "jest": "^27.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.22.0",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.6.0"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Demo Rest Proxy App",
                "type": "portal-app",
                "clientBootstrap": "startRestProxyDemoApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "title": "Demo REST Proxy App",
                    "category": "Demo",
                    "defaultRestrictViewToRoles": [
                        "Authenticated"
                    ],
                    "proxies": {
                        "spaceXApi": {
                            "targetUri": "https://api.spacexdata.com/v4",
                            "restrictToRoles": [
                                "Authenticated"
                            ]
                        }
                    }
                }
            }
        ]
    }
}
