{
    "name": "@mashroom/mashroom-portal-admin-app",
    "description": "Mashroom Portal default Admin Toolbar",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.6.1",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "2.6.1",
        "@mashroom/mashroom-portal": "2.6.1",
        "@mashroom/mashroom-portal-ui-commons": "2.6.1",
        "@types/latinize": "^0.2.18",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "formik": "^2.4.6",
        "latinize": "^2.0.0",
        "nanoid": "^3.3.7",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-intl": "^6.6.8",
        "react-redux": "^9.1.2",
        "redux": "^5.0.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Admin App",
                "type": "portal-app2",
                "clientBootstrap": "startPortalAdminApp",
                "resources": {
                    "js": [
                        "admin-toolbar.js"
                    ]
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "category": "hidden",
                    "defaultRestrictViewToRoles": [
                        "Administrator"
                    ],
                    "appConfig": {}
                }
            }
        ]
    }
}
