{
    "name": "@mashroom/mashroom-portal-admin-app",
    "description": "Mashroom Portal default Admin Toolbar",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.4",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "^2.9.4",
        "@mashroom/mashroom-portal": "^2.9.4",
        "@mashroom/mashroom-portal-ui-commons": "2.9.3",
        "@types/latinize": "^0.2.18",
        "@types/react": "^19.1.3",
        "@types/react-dom": "^19.1.4",
        "formik": "^2.4.6",
        "latinize": "^2.0.0",
        "nanoid": "^3.3.11",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.6.0",
        "react-redux": "^9.2.0",
        "redux": "^5.0.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Admin App",
                "type": "portal-app2",
                "clientBootstrap": "startPortalAdminApp",
                "resources": {
                    "js": [
                        "admin-toolbar.js"
                    ]
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "category": "hidden",
                    "defaultRestrictViewToRoles": [
                        "Administrator"
                    ],
                    "appConfig": {}
                }
            }
        ]
    }
}
