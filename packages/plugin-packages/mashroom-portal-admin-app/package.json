{
    "name": "@mashroom/mashroom-portal-admin-app",
    "description": "Mashroom Portal default Admin Toolbar",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.0.0-alpha.1",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "2.0.0-alpha.1",
        "@mashroom/mashroom-portal": "2.0.0-alpha.1",
        "@mashroom/mashroom-portal-ui-commons": "2.0.0-alpha.1",
        "@types/latinize": "^0.2.15",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/react-redux": "^7.1.21",
        "formik": "^2.2.9",
        "latinize": "^0.5.0",
        "nanoid": "^3.1.30",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.24.2",
        "react-redux": "7.2.6",
        "redux": "^4.1.2",
        "shallow-equal": "^1.2.1",
        "tslib": "^2.3.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Admin App",
                "type": "portal-app2",
                "clientBootstrap": "startPortalAdminApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "category": "hidden",
                    "defaultRestrictViewToRoles": [
                        "Administrator"
                    ],
                    "appConfig": {}
                }
            }
        ]
    }
}
