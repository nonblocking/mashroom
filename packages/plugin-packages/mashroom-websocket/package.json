{
    "name": "@mashroom/mashroom-websocket",
    "description": "Adds a WebSocket server with a simple Service that can be used to interact with clients",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.1.1",
    "files": [
        "dist/**",
        "views/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "express-handlebars": "^6.0.6",
        "fs-extra": "^10.1.0",
        "handlebars": "^4.7.7",
        "uuid": "^8.3.2",
        "ws": "^8.7.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.1.1",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.1.1",
        "@mashroom/mashroom-security": "2.1.1",
        "@mashroom/mashroom-utils": "2.1.1",
        "@types/express": "^4.17.13",
        "@types/express-handlebars": "^6.0.0",
        "@types/fs-extra": "^9.0.13",
        "@types/uuid": "^8.3.4",
        "@types/ws": "^8.5.3",
        "express": "^4.18.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test))\\.ts"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build:backend": "babel src/backend --extensions \".ts\" -d dist",
        "build:frontend": "webpack --mode production",
        "build": "npm run build:backend && npm run build:frontend",
        "dev": "nodemon --watch src -e ts --exec \"npm run build && node dist/webapp/dev_server.js\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom WebSocket Webapp",
                "type": "web-app",
                "bootstrap": "./dist/webapp/mashroom-bootstrap-webapp.js",
                "requires": [
                    "Mashroom Security Services"
                ],
                "defaultConfig": {
                    "path": "/websocket",
                    "reconnectMessageBufferFolder": null,
                    "reconnectTimeoutSec": 5,
                    "restrictToRoles": null,
                    "enableKeepAlive": true,
                    "keepAliveIntervalSec": 15,
                    "maxConnections": 2000
                }
            },
            {
                "name": "Mashroom WebSocket Services",
                "type": "services",
                "namespace": "websocket",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom WebSocket Webapp"
                ]
            }
        ]
    }
}
