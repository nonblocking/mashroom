{
    "name": "@mashroom/mashroom-websocket",
    "description": "Adds a WebSocket server with a simple Service that can be used to interact with clients",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.4",
    "files": [
        "dist/**",
        "views/**",
        "type-definitions/*",
        "mashroom.json"
    ],
    "dependencies": {
        "express-handlebars": "^7.1.3",
        "fs-extra": "^11.3.0",
        "handlebars": "^4.7.8",
        "uuid": "^11.1.0",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.9.4",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.9.4",
        "@mashroom/mashroom-security": "2.9.4",
        "@mashroom/mashroom-utils": "2.9.4",
        "@types/fs-extra": "^11.0.4",
        "@types/ws": "^8.18.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build:backend": "babel src/backend --extensions \".ts\" -d dist",
        "build:frontend": "webpack --mode production",
        "build": "npm run build:backend && npm run build:frontend",
        "dev": "nodemon --watch src -e ts --exec \"npm run build && node dist/webapp/dev-server.js\""
    }
}
