{
    "name": "@mashroom/mashroom-websocket",
    "description": "Adds a WebSocket server with a simple Service that can be used to interact with clients",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.5.1",
    "files": [
        "dist/**",
        "views/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "express": "^4.17.1",
        "express-handlebars": "^4.0.4",
        "handlebars": "^4.7.6",
        "uuid": "^8.3.0",
        "ws": "^7.3.0",
        "fs-extra": "^9.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.5.1",
        "@mashroom/mashroom-monitoring-metrics-collector": "1.5.1",
        "@mashroom/mashroom-security": "1.5.1",
        "@mashroom/mashroom-utils": "1.5.1",
        "eslint": "^7.0.0",
        "jest": "^26.0.1",
        "nodemon": "^2.0.4",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build:backend": "babel src/backend -d dist",
        "build:frontend": "webpack --mode production --display-error-details",
        "build": "npm run build:backend && npm run build:frontend",
        "dev": "nodemon --watch src -e js --exec \"npm run build && node dist/webapp/dev_server.js\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom WebSocket Webapp",
                "type": "web-app",
                "bootstrap": "./dist/webapp/mashroom-bootstrap-webapp.js",
                "requires": [
                    "Mashroom Security Services"
                ],
                "defaultConfig": {
                    "path": "/websocket",
                    "reconnectMessageBufferFolder": null,
                    "reconnectTimeoutSec": 5,
                    "restrictToRoles": null,
                    "enableKeepAlive": true,
                    "keepAliveIntervalSec": 15,
                    "maxConnections": 2000
                }
            },
            {
                "name": "Mashroom WebSocket Services",
                "type": "services",
                "namespace": "websocket",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom Security Services"
                ]
            }
        ]
    }
}
