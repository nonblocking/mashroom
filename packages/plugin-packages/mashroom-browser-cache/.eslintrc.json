{
    "parser": "babel-eslint",
    "plugins": [
        "flowtype",
        "jest"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "node": true,
        "browser": false,
        "es6": true,
        "jest": true
    },
    "rules": {
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "prefer-template": "error",
        "prefer-object-spread": "error",
        "@typescript-estlind/ban-ts-comment": "off"
    }
}
