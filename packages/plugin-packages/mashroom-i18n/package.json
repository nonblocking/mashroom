{
    "name": "@mashroom/mashroom-i18n",
    "description": "Mashroom internationalization service",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.5.3",
    "files": [
        "dist/**",
        "messages/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "accept-language-parser": "^1.5.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.5.3",
        "@mashroom/mashroom-utils": "2.5.3",
        "@types/accept-language-parser": "^1.5.6",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Internationalization Services",
                "type": "services",
                "namespace": "i18n",
                "bootstrap": "./dist/mashroom-bootstrap-services.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "availableLanguages": [
                        "en"
                    ],
                    "defaultLanguage": "en",
                    "messages": "./messages"
                }
            }
        ]
    }
}
