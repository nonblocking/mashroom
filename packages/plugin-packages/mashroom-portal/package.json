{
    "name": "@mashroom/mashroom-portal",
    "description": "Mashroom Portal",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.3",
    "files": [
        "dist/**",
        "type-definitions/*",
        "mashroom.json"
    ],
    "dependencies": {
        "@mashroom/mashroom-utils": "2.9.3",
        "body-parser": "^2.2.1",
        "express-sse-ts": "^1.0.2",
        "nanoid": "^3.3.11"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.9.3",
        "@mashroom/mashroom-browser-cache": "2.9.3",
        "@mashroom/mashroom-cdn": "2.9.3",
        "@mashroom/mashroom-csrf-protection": "2.9.3",
        "@mashroom/mashroom-http-proxy": "2.9.3",
        "@mashroom/mashroom-i18n": "2.9.3",
        "@mashroom/mashroom-memory-cache": "2.9.3",
        "@mashroom/mashroom-messaging": "2.9.3",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.9.3",
        "@mashroom/mashroom-security": "2.9.3",
        "@mashroom/mashroom-storage": "2.9.3",
        "@mashroom/mashroom-vhost-path-mapper": "2.9.3",
        "systemjs": "^6.15.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "globals": {
            "MashroomPortalRemoteMessagingPrivateUserTopic": "user/testuser"
        },
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build-backend": "babel src/backend -d dist/backend --extensions \".ts\"",
        "build-frontend": "webpack --mode production && babel src/frontend/welcome-app -d dist/frontend/welcome-app --extensions \".ts\" && cpy \"src/frontend/welcome-app/assets/*\" dist/frontend/welcome-app/assets && sass --style compressed --no-source-map src/frontend/welcome-app/sass/style.scss dist/frontend/welcome-app.css",
        "build": "npm run build-backend && npm run build-frontend",
        "dev": "nodemon --watch src --exec \"npm run build-frontend && npm run build-backend && node dist/backend/dev-server.js\""
    }
}
