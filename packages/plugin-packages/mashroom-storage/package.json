{
    "name": "@mashroom/mashroom-storage",
    "description": "A storage service with a configurable provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.7.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "dependencies": {
        "@mashroom/mashroom-utils": "2.7.1"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.7.1",
        "@mashroom/mashroom-memory-cache": "2.7.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Storage Services",
                "type": "services",
                "namespace": "storage",
                "bootstrap": "./dist/services/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "provider": "Mashroom Storage Filestore Provider",
                    "memoryCache": {
                        "enabled": false,
                        "ttlSec": 120,
                        "invalidateOnUpdate": true,
                        "collections": {}
                    }
                }
            },
            {
                "name": "Mashroom Storage Provider Loader",
                "type": "plugin-loader",
                "bootstrap": "./dist/plugins/loader/mashroom-bootstrap-plugin-loader.js",
                "loads": "storage-provider"
            }
        ]
    }
}
