{
    "name": "@mashroom/mashroom-cdn",
    "description": "A Mashroom service to manage CDN hosts",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.0.0-alpha.1",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "2.0.0-alpha.1",
        "@mashroom/mashroom-utils": "2.0.0-alpha.1",
        "@types/express": "^4.17.13"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom CDN Services",
                "type": "services",
                "namespace": "cdn",
                "bootstrap": "./dist/mashroom-bootstrap-services.js",
                "defaultConfig": {
                    "cdnHosts": []
                }
            }
        ]
    }
}
