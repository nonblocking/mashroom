{
    "name": "@mashroom/mashroom-security-provider-basic-wrapper",
    "description": "Adds support for BASIC to any other security provider that implements login() properly",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.7.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "express": "^4.21.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.7.1",
        "@mashroom/mashroom-security": "2.7.1",
        "@mashroom/mashroom-utils": "2.7.1",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src --extensions \".ts\" -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Basic Wrapper Security Provider",
                "type": "security-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "defaultConfig": {
                    "targetSecurityProvider": "Mashroom Security Simple Provider",
                    "onlyPreemptive": true,
                    "realm": "mashroom"
                }
            }
        ]
    }
}
