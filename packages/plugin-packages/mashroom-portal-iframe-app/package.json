{
    "name": "@mashroom/mashroom-portal-iframe-app",
    "description": "App that shows an arbitrary page in an IFrame. With support for responsiveness.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.8.2",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.14.5",
        "@mashroom/mashroom-portal": "1.8.2",
        "eslint": "^7.32.0",
        "jest": "^27.0.6",
        "typescript": "^4.3.5",
        "webpack": "^5.48.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve  --mode development --hot",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal IFrame App",
                "title": "IFrame App",
                "type": "portal-app",
                "bootstrap": "startPortalIFrameApp",
                "category": "Content",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {
                        "url": "https://en.wikipedia.org/wiki/Main_Page",
                        "width": "100%",
                        "defaultHeight": "80vh"
                    }
                }
            }
        ]
    }
}
