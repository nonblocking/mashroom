{
    "name": "@mashroom/mashroom-portal-iframe-app",
    "description": "A Mashroom Portal App that shows an arbitrary site within an IFrame. Can be made responsive if the embedded site posts its height via message.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.0.0-alpha.2",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom-portal": "2.0.0-alpha.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve  --mode development --hot",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal IFrame App",
                "type": "portal-app2",
                "clientBootstrap": "startPortalIFrameApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ]
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "title": "IFrame App",
                    "description": {
                        "en": "An App that shows an arbitrary site within an IFrame. Can be made responsive if the embedded site posts its height via message.",
                        "de": "Eine App die eine beliebige Website innerhalb eines IFrame anzeigt. Kann responsive gemacht werden indem die eingebettete Website sein HÃ¶he als Message sendet."
                    },
                    "category": "Content",
                    "appConfig": {
                        "url": "https://en.wikipedia.org/wiki/Main_Page",
                        "width": "100%",
                        "defaultHeight": "80vh"
                    }
                }
            }
        ]
    }
}
