{
    "name": "@mashroom/mashroom-messaging",
    "description": "Adds a Service plugin for server-side messaging and comes with a WebSocket interface that allows sending messages across clients (and browser tabs)",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.2",
    "files": [
        "dist/**",
        "type-definitions/*",
        "mashroom.json"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "2.9.2",
        "@mashroom/mashroom-security": "2.9.2",
        "@mashroom/mashroom-utils": "2.9.2",
        "@mashroom/mashroom-websocket": "2.9.2",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    }
}
