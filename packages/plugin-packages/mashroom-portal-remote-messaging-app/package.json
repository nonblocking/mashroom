{
    "name": "@mashroom/mashroom-portal-remote-messaging-app",
    "description": "Simple App to test remote messaging",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.0",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@mashroom/mashroom": "1.9.0",
        "@mashroom/mashroom-portal": "1.9.0",
        "@mashroom/mashroom-portal-ui-commons": "1.9.0",
        "@mashroom/mashroom-utils": "1.9.0",
        "@types/react": "^17.0.21",
        "@types/react-dom": "^17.0.9",
        "@types/react-redux": "^7.1.18",
        "eslint": "^7.32.0",
        "jest": "^27.2.0",
        "nanoid": "^3.1.25",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.20.10",
        "react-redux": "7.2.5",
        "redux": "^4.1.1",
        "shallow-equal": "^1.2.1",
        "typescript": "^4.4.3",
        "webpack": "^5.53.0",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.2.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Remote Messaging App",
                "title": "Remote Messaging App",
                "type": "portal-app",
                "bootstrap": "startRemoteMessagingApp",
                "category": "Testing",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "appConfig": {}
                }
            }
        ]
    }
}
