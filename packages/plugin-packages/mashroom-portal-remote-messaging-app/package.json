{
    "name": "@mashroom/mashroom-portal-remote-messaging-app",
    "description": "A simple SPA that demonstrates the remote messaging capabilities of the Mashroom Portal",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.2",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "1.9.2",
        "@mashroom/mashroom-portal": "1.9.2",
        "@mashroom/mashroom-portal-ui-commons": "1.9.2",
        "@mashroom/mashroom-utils": "1.9.2",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/react-redux": "^7.1.21",
        "nanoid": "^3.1.30",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.24.2",
        "react-redux": "7.2.6",
        "redux": "^4.1.2",
        "shallow-equal": "^1.2.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint --ext .ts,.tsx --fix --quiet ./src",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Remote Messaging App",
                "type": "portal-app2",
                "clientBootstrap": "startRemoteMessagingApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "local": {
                    "resourcesRoot": "./dist"
                },
                "defaultConfig": {
                    "title": "Remote Messaging Test App",
                    "category": "Testing"
                }
            }
        ]
    }
}
