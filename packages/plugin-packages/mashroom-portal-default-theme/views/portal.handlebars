{{! Portal page template  }}
<!doctype html>
<html lang="{{lang}}">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="description" content="{{page.description}}">
    <meta name="keywords" content="{{page.keywords}}">
    {{#if csrfToken}}
        <meta name="csrf-token" content="{{csrfToken}}">
    {{/if}}

    <title>{{site.title}} - {{page.title}}</title>

    <link rel="shortcut icon" type="image/x-icon" href="{{resourcesBasePath}}/assets/mashroom_favicon.ico">
    <link rel="stylesheet" type="text/css" href="{{resourcesBasePath}}/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="{{resourcesBasePath}}/style.css?v={{lastThemeReloadTs}}">
    {{! Style that can be loaded async...  }}
    <link rel="stylesheet" type="text/css" href="{{resourcesBasePath}}/fontawesome/css/regular.css" media="print" onload="this.media='all'; this.onload=null;">
    <link rel="stylesheet" type="text/css" href="{{resourcesBasePath}}/fontawesome/css/solid.css" media="print" onload="this.media='all'; this.onload=null;">

    {{{portalResourcesHeader}}}

    {{#if page.extraCss}}
        <style type="text/css">
            {{{page.extraCss}}}
        </style>
    {{/if}}

    <script type="application/javascript" src="{{resourcesBasePath}}/main.js?v={{lastThemeReloadTs}}"></script>
</head>
<body>
    <div id="mashroom-portal-admin-app-container">
        <!-- Admin app goes here -->
    </div>

    <header>
        <div class="logo">
            <img src="{{resourcesBasePath}}/assets/mashroom_logo.svg" width="40" height="40" alt="Mashroom Server" />
        </div>
        <div class="site-name">
            <h1>{{site.title}}</h1>
        </div>
        {{#ifShowEnvAndVersions}}
            <div class="env-and-versions">
                <div class="env">Environment: {{env}}</div>
                <div class="versions">Server version: {{mashroomVersion}}, <a href="javascript:void(0)" onclick="toggleShowAppVersions()">App versions</a></div>
            </div>
        {{/ifShowEnvAndVersions}}
        {{#if user.guest}}
        {{else}}
            <div class="user">
                <div class="user-name">
                    {{user.displayName}}
                </div>
                <div class="logout">
                    <a href="{{apiBasePath}}/logout">{{__ messages "logout"}}</a>
                </div>
            </div>
        {{/if}}
        <div class="menu-open" onclick="toggleMenu()"></div>
    </header>

    <div class="loading-animation">
        <div id="page-loading-progress" class="loading-animation-progress"></div>
    </div>

    <main class="{{extraMainClasses}}">
        {{> navigation}}

        <div id="portal-page-content" class="mashroom-portal-apps-container container-fluid">
            {{{pageContent}}}
        </div>
    </main>

    <div id="mashroom-portal-modal-overlay">
        <div class="mashroom-portal-modal-overlay-wrapper">
            <div class="mashroom-portal-modal-overlay-header">
                <div id="mashroom-portal-modal-overlay-title">Title</div>
                <div id="mashroom-portal-modal-overlay-close" class="close-button"></div>
            </div>
            <div class="mashroom-portal-modal-overlay-content">
                <div id="mashroom-portal-modal-overlay-app">
                    <!-- Modal apps go here -->
                </div>
            </div>
        </div>
    </div>

    <div id="mashroom-portal-auth-expires-warning">
        <div class="mashroom-portal-auth-expires-warning-message">
            {{{__ messages "authenticationExpiresWarning"}}}
        </div>
    </div>

    <footer>
        <div class="powered-by">
            Powered by: <a href="https://www.mashroom-server.com" rel="noopener" target="_blank">Mashroom Portal Server</a>
        </div>
    </footer>

    {{{portalResourcesFooter}}}
</body>
</html>
