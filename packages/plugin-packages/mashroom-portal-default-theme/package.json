{
    "name": "@mashroom/mashroom-portal-default-theme",
    "description": "Default Portal Theme",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.3.0",
    "files": [
        "dist/**",
        "views/**"
    ],
    "dependencies": {
        "express": "^4.18.2",
        "express-handlebars": "^6.0.6",
        "handlebars": "^4.7.7"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^6.2.1",
        "@mashroom/mashroom": "2.3.0",
        "@mashroom/mashroom-portal": "2.3.0",
        "@types/express": "^4.17.15",
        "@types/express-handlebars": "^6.0.0",
        "bootstrap": "^5.2.3"
    },
    "scripts": {
        "lint": "eslint src --ext .ts --fix",
        "type-check": "tsc --noEmit",
        "dev": "nodemon --watch src -e ts,scss --exec \"npm run build && node dist/dev_server.js\"",
        "build:backend": "babel src/backend -d dist --extensions .ts",
        "build:frontend": "webpack --mode production",
        "build:style": "sass --style compressed --no-source-map --load-path=. src/frontend/sass/portal.scss:dist/public/portal.css src/frontend/sass/admin.scss:dist/public/admin.css",
        "build:copy-assets": "cpy \"src/assets/*\" dist/public/assets && cpy . ../../../dist/public/fontawesome --cwd=node_modules/@fortawesome/fontawesome-free --parents",
        "build": "npm run build:backend && npm run build:frontend && npm run build:style && npm run build:copy-assets"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Default Theme",
                "type": "portal-theme",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "resourcesRoot": "./dist/public",
                "views": "./views",
                "defaultConfig": {
                    "spaMode": true,
                    "showPortalAppHeaders": true,
                    "showEnvAndVersions": false
                }
            }
        ]
    }
}
