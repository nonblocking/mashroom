{
    "name": "@mashroom/mashroom-portal-default-theme",
    "description": "Default Portal Theme",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.2",
    "files": [
        "dist/**",
        "views/**"
    ],
    "dependencies": {
        "express-handlebars": "^6.0.2",
        "handlebars": "^4.7.7"
    },
    "devDependencies": {
        "@mashroom/mashroom": "1.9.2",
        "@mashroom/mashroom-portal": "1.9.2",
        "@mashroom/mashroom-portal-ui-commons": "1.9.2",
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@types/express": "^4.17.13",
        "@types/express-handlebars": "^6.0.0",
        "bootstrap": "^5.1.3",
        "express": "^4.17.2"
    },
    "scripts": {
        "lint": "eslint --ext .ts src --fix",
        "type-check": "tsc --noEmit",
        "dev": "nodemon --watch src -e ts,scss --exec \"npm run build && node dist/dev_server.js\"",
        "build:backend": "babel src/backend -d dist --extensions .ts",
        "build:frontend": "webpack --mode production && sass --style compressed --load-path=. src/frontend/sass/style.scss dist/public/style.css",
        "build:copy-assets": "cpy src/assets dist/public/assets && cpy . ../../../dist/public/bootstrap --cwd=node_modules/bootstrap/dist --parents && cpy . ../../../dist/public/fontawesome --cwd=node_modules/@fortawesome/fontawesome-free --parents",
        "build": "npm run build:backend && npm run build:frontend  && npm run build:copy-assets"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Portal Default Theme",
                "type": "portal-theme",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "resourcesRoot": "./dist/public",
                "views": "./views",
                "defaultConfig": {
                    "spaMode": true,
                    "showPortalAppHeaders": true,
                    "showEnvAndVersions": false
                }
            }
        ]
    }
}
