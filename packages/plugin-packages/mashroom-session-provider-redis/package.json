{
    "name": "@mashroom/mashroom-session-provider-redis",
    "description": "Mashroom Server Redis provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.8.0",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "connect-redis": "^8.0.1",
        "express": "^4.19.2",
        "ioredis": "^5.4.1"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.8.0",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.8.0",
        "@mashroom/mashroom-session": "2.8.0",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Session Redis Provider",
                "type": "session-store-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "defaultConfig": {
                    "client": {
                        "redisOptions": {
                            "host": "localhost",
                            "port": "6379",
                            "maxRetriesPerRequest": 3,
                            "enableOfflineQueue": false
                        },
                        "cluster": false,
                        "clusterNodes": null,
                        "clusterOptions": null
                    },
                    "prefix": "mashroom:sess:",
                    "ttl": 86400
                }
            }
        ]
    }
}
