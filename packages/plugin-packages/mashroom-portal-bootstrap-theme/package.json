{
    "name": "mashroom-portal-bootstrap-theme",
    "description": "Bootstrap based Portal Theme",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**",
        "views/**",
        "mashroom.json"
    ],
    "dependencies": {
        "express-handlebars": "^7.1.3",
        "handlebars": "^4.7.8"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^6.7.2",
        "@mashroom/mashroom": "2.9.3",
        "@mashroom/mashroom-portal": "2.9.3",
        "bootstrap": "^5.3.8"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "dev": "nodemon --watch src -e ts,scss --exec \"npm run build && node dist/dev-server.js\"",
        "build:backend": "babel src/backend -d dist --extensions .ts",
        "build:frontend": "webpack --mode production",
        "build:style": "sass --quiet --style compressed --no-source-map --load-path=./node_modules --load-path=../../../node_modules src/frontend/sass/portal.scss:dist/public/portal.css src/frontend/sass/fonts.scss:dist/public/fonts.css src/frontend/sass/admin.scss:dist/public/admin.css",
        "build:copy-assets": "cpy \"src/assets/**\" dist/public/assets && cpy \"../../../node_modules/@fortawesome/fontawesome-free/**\" dist/public/fontawesome",
        "build": "npm run build:backend && npm run build:frontend && npm run build:style && npm run build:copy-assets"
    },
    "lavamoat": {
        "allowScripts": {
            "@fortawesome/fontawesome-free": false
        }
    }
}
