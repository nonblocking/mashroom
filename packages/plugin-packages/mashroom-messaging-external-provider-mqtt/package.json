{
    "name": "@mashroom/mashroom-messaging-external-provider-mqtt",
    "description": "Mashroom plugin that can use a MQTT server as external messaging provider for service side messaging",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.8.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "@mashroom/mashroom-utils": "2.8.1",
        "mqtt": "^5.13.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.8.1",
        "@mashroom/mashroom-messaging": "2.8.1",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.8.1",
        "@types/ws": "^8.18.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Messaging External Provider MQTT",
                "type": "external-messaging-provider",
                "bootstrap": "./dist/provider/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Messaging Services"
                ],
                "defaultConfig": {
                    "internalTopic": "mashroom",
                    "mqttConnectUrl": "mqtt://localhost:1883",
                    "mqttProtocolVersion": 4,
                    "mqttQoS": 1,
                    "mqttUser": null,
                    "mqttPassword": null,
                    "rejectUnauthorized": true
                }
            }
        ]
    }
}
