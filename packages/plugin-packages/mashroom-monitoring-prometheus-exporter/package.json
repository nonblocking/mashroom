{
    "name": "@mashroom/mashroom-monitoring-prometheus-exporter",
    "description": "Exports Mashroom metrics for the Prometheus monitoring system",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.4.3",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "express": "^4.18.2",
        "pm2": "^5.3.0",
        "prom-client": "^14.2.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.4.3",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.4.3",
        "@types/express": "^4.17.17"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Monitoring Prometheus Exporter Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap-webapp.js",
                "requires": [
                    "Mashroom Monitoring Metrics Collector Services"
                ],
                "defaultConfig": {
                    "path": "/metrics"
                }
            }
        ]
    }
}
