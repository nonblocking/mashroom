{
    "name": "@mashroom/mashroom-monitoring-prometheus-exporter",
    "description": "Exports Mashroom metrics for the Prometheus monitoring system",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.7.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/exporter-prometheus": "^0.57.0",
        "@opentelemetry/sdk-metrics": "^1.30.0",
        "express": "^4.21.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "2.7.1",
        "@mashroom/mashroom-monitoring-metrics-collector": "2.7.1",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest --passWithNoTests",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Monitoring Prometheus Exporter Webapp",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap-webapp.js",
                "requires": [
                    "Mashroom Monitoring Metrics Collector Services"
                ],
                "defaultConfig": {
                    "path": "/metrics"
                }
            }
        ]
    }
}
