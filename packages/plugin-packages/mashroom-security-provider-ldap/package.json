{
    "name": "@mashroom/mashroom-security-provider-ldap",
    "description": "LDAP security provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.5.1",
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "ldapjs": "^2.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@mashroom/mashroom": "1.5.1",
        "@mashroom/mashroom-security": "1.5.1",
        "@mashroom/mashroom-utils": "1.5.1",
        "eslint": "^7.0.0",
        "express": "^4.17.1",
        "jest": "^26.0.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.js$"
    },
    "scripts": {
        "lint": "eslint src test --fix",
        "test": "jest",
        "build": "babel src -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom LDAP Security Provider",
                "type": "security-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "loginPage": "/login",
                    "serverUrl": "ldap://my-ldap-server:636",
                    "tlsOptions": null,
                    "bindDN": "admin",
                    "bindCredentials": "secret",
                    "baseDN": "",
                    "userSearchFilter": "(&(objectClass=person)(uid=@username@))",
                    "groupSearchFilter": "(objectClass=group)",
                    "groupToRoleMapping": "./groupToRoleMapping.json",
                    "authenticationTimeoutSec": 1200
                }
            }
        ]
    }
}
