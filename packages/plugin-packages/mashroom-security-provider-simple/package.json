{
    "name": "@mashroom/mashroom-security-provider-simple",
    "description": "Simple JSON file based security provider",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.1.2",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "2.1.2",
        "@mashroom/mashroom-security": "2.1.2",
        "@mashroom/mashroom-utils": "2.1.2",
        "@types/express": "^4.17.13",
        "express": "^4.18.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src --extensions \".ts\" -d dist"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Security Simple Provider",
                "type": "security-provider",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Session Middleware",
                    "Mashroom Security Services"
                ],
                "defaultConfig": {
                    "users": "./users.json",
                    "loginPage": "/login",
                    "authenticationTimeoutSec": 1200
                }
            }
        ]
    }
}
