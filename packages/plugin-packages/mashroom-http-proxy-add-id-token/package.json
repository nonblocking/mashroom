{
    "name": "@mashroom/mashroom-http-proxy-add-id-token",
    "description": "Mashroom Http Proxy interceptor that adds the OpenID ID/JWT token to every backend call",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.9.2",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "1.9.2",
        "@mashroom/mashroom-http-proxy": "1.9.2",
        "@mashroom/mashroom-security": "1.9.2",
        "@babel/cli": "^7.16.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "eslint": "^8.3.0",
        "jest": "^27.3.1",
        "typescript": "^4.5.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Http Proxy Add ID Token Interceptor",
                "type": "http-proxy-interceptor",
                "namespace": "csrf",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Security Services",
                    "Mashroom OpenID Connect Security Provider"
                ],
                "defaultConfig": {
                    "addBearer": false,
                    "idTokenHeader": "X-USER-ID-TOKEN",
                    "targetUris": [
                        ".*"
                    ]
                }
            }
        ]
    }
}
