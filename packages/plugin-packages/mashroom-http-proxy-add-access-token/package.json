{
    "name": "@mashroom/mashroom-http-proxy-add-access-token",
    "description": "Mashroom Http Proxy interceptor that adds the OpenID access token to every backend call",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.7.0",
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@mashroom/mashroom": "2.7.0",
        "@mashroom/mashroom-http-proxy": "2.7.0",
        "@mashroom/mashroom-security": "2.7.0",
        "@types/express": "^4.17.21"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Http Proxy Add Access Token Interceptor",
                "type": "http-proxy-interceptor",
                "namespace": "csrf",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Security Services",
                    "Mashroom OpenID Connect Security Provider"
                ],
                "defaultConfig": {
                    "addBearer": true,
                    "accessTokenHeader": "X-USER-ACCESS-TOKEN",
                    "targetUris": [
                        ".*"
                    ]
                }
            }
        ]
    }
}
