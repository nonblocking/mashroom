{
    "$schema": "../../../node_modules/@mashroom/mashroom-json-schemas/schemas/mashroom-plugins.json",
    "devModeBuildScript": "build",
    "plugins": [
        {
            "name": "Mashroom Portal Demo Angular App",
            "type": "portal-app2",
            "clientBootstrap": "startAngularDemoApp",
            "resources": {
                "js": [
                    "runtime.js",
                    "main.js"
                ],
                "css": [
                    "styles.css"
                ]
            },
            "screenshots": [
                "screenshot.png"
            ],
            "local": {
                "resourcesRoot": "./dist"
            },
            "defaultConfig": {
                "title": "Demo Angular App",
                "description": {
                    "en": "A simple Angular Microfrontend",
                    "de": "Ein einfaches Angular Microfrontend"
                },
                "category": "Demo",
                "appConfig": {
                    "message": "This is simple Angular based Microfrontend that communicates with other Microfrontends on the page via message bus",
                    "pingButtonLabel": "Send Ping"
                }
            }
        }
    ]
}
