{
    "compilerOptions": {
        "target": "esnext",
        "module": "ES2020",
        "outDir": "dist/declarations",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "moduleResolution": "node",
        "declaration": true,
        "forceConsistentCasingInFileNames": false,
        "skipLibCheck": true
    },
    "exclude": [
        "dist"
    ]
}
