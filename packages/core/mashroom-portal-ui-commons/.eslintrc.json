{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "flowtype",
        "jest"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "settings": {
        "react": {
            "version": "16.6"
        }
    },
    "rules": {
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "prefer-template": "error",
        "prefer-object-spread": "error",
        "no-console": "off"
    }
}
