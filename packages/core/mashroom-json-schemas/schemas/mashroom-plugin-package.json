{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "MashroomPluginDefinitionCommon": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "requires": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Required plugins"
                },
                "defaultConfig": {
                    "type": "object"
                }
            },
            "required": ["name"]
        },
        "MashroomPluginLoaderPluginDefinition": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/MashroomPluginDefinitionCommon"
                },
                {
                    "properties": {
                        "type": {
                            "const": "plugin-loader"
                        },
                        "loads": {
                            "type": "string",
                            "description": "The plugin type this loader can load"
                        },
                        "bootstrap": {
                            "type": "string",
                            "description": "Script that exports a MashroomPluginLoaderPluginBootstrapFunction"
                        }
                    },
                    "required": ["type", "loads", "bootstrap"]
                }
            ],
            "additionalProperties": false
        },
        "MashroomWebAppPluginDefinition": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/MashroomPluginDefinitionCommon"
                },
                {
                    "properties": {
                        "type": {
                            "const": "web-app"
                        },
                        "bootstrap": {
                            "type": "string",
                            "description": "Script that exports a MashroomWebAppPluginBootstrapFunction"
                        },
                        "defaultConfig": {
                            "type": "object",
                            "properties": {
                                "path": {
                                    "type": "string",
                                    "description": "The default path"
                                }
                            },
                            "required": ["path"]
                        }
                    },
                    "required": ["type", "bootstrap", "defaultConfig"]
                }
            ]
        },
        "additionalProperties": false
    },
    "type": "object",
    "properties": {
        "devModeBuildScript": {
            "type": "string"
        },
        "plugins": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/MashroomPluginLoaderPluginDefinition"
                    },
                    {
                        "$ref": "#/definitions/MashroomWebAppPluginDefinition"
                    }
                ]
            }
        },
        "$schema": {
            "type": "string"
        }
    },
    "required": ["plugins"],
    "additionalProperties": false
}
