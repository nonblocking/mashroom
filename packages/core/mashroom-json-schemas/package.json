{
    "name": "@mashroom/mashroom-json-schemas",
    "description": "JSON schemas for Mashroom config files",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.4.3",
    "files": [
        "schemas/**",
        "type-definitions/**"
    ],
    "devDependencies": {
        "ajv": "^8.12.0",
        "json-schema-to-typescript": "^13.1.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "test": "jest",
        "type-check": "tsc --noEmit",
        "build": "json2ts --cwd schemas/ --no-unknownAny --strictIndexSignatures --no-additionalProperties -i schemas/ -o type-definitions/ && del type-definitions/mashroom-packagejson-extension.d.ts"
    }
}
