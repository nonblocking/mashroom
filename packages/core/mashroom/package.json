{
    "name": "@mashroom/mashroom",
    "description": "Mashroom Server. Supports out of the box the following plugin types: 'web-app', 'api', 'middleware', 'static', 'services' and 'plugin-loader'.",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.2",
    "main": "dist",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "engines": {
        "node": ">=20"
    },
    "bin": {
        "mashroom": "dist/server.js"
    },
    "dependencies": {
        "@mashroom/mashroom-utils": "2.9.2",
        "anymatch": "^3.1.3",
        "chokidar": "^4.0.3",
        "express": "^5.1.0",
        "@types/express": "^5.0.5",
        "fs-extra": "^11.3.0",
        "log4js": "^6.9.1",
        "lucy-dirsum": "^0.1.1",
        "minimist": "^1.2.8",
        "ts-blank-space": "^0.6.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest --maxWorkers=1 --detectOpenHandles",
        "build": "babel src -d dist --extensions \".ts\" && cpy ./src/hooks dist/hooks --flat",
        "dev": "npm run build && node dist/server.js"
    }
}
