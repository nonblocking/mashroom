{
    "name": "@mashroom/mashroom",
    "description": "Mashroom Server. Supports out of the box the following plugin types: 'web-app', 'api', 'middleware', 'static', 'services' and 'plugin-loader'.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "2.1.3",
    "main": "dist",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "engines": {
        "node": ">=14"
    },
    "bin": {
        "mashroom": "./dist/server.js"
    },
    "dependencies": {
        "@mashroom/mashroom-utils": "2.1.3",
        "@types/express": "^4.17.14",
        "anymatch": "^3.1.2",
        "chokidar": "^3.5.3",
        "express": "^4.18.2",
        "fs-extra": "^10.1.0",
        "log4js": "^6.7.0",
        "lucy-dirsum": "^0.1.1",
        "minimist": "^1.2.7",
        "spdy": "^4.0.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/spdy": "^3.4.5"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\"",
        "dev": "npm run build && node dist/server.js"
    }
}
