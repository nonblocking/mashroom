{
    "name": "@mashroom/mashroom",
    "description": "Mashroom Server. Supports out of the box the following plugin types: 'web-app', 'api', 'middleware', 'static', 'services' and 'plugin-loader'.",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.7.10",
    "main": "dist",
    "files": [
        "dist/**",
        "type-definitions/*"
    ],
    "engines": {
        "node": ">=10.0.0"
    },
    "bin": {
        "mashroom": "./dist/server.js"
    },
    "dependencies": {
        "@mashroom/mashroom-utils": "1.7.10",
        "@types/express": "^4.17.11",
        "anymatch": "^3.1.1",
        "chokidar": "^3.5.1",
        "express": "^4.17.1",
        "fs-extra": "^9.1.0",
        "log4js": "^6.3.0",
        "lucy-dirsum": "^0.1.1",
        "minimist": "^1.2.5",
        "strip-ansi": "^6.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.16",
        "@types/fs-extra": "^9.0.7",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.28",
        "eslint": "^7.20.0",
        "jest": "^26.6.3",
        "typescript": "^4.1.5"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts$"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "build": "babel src -d dist --extensions \".ts\"",
        "dev": "npm run build && node dist/server.js"
    }
}
