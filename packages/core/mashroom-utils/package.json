{
    "name": "@mashroom/mashroom-utils",
    "description": "Shared utils for Mashroom plugins",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom",
    "license": "MIT",
    "version": "1.6.4",
    "main": "lib",
    "files": [
        "lib/**"
    ],
    "dependencies": {
        "find-process": "^1.4.4",
        "ip-filter": "^3.0.5",
        "kind-of": "^6.0.3",
        "request-ip": "^2.1.3",
        "ua-parser-js": "^0.7.23"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "eslint": "^7.13.0",
        "flow-copy-source": "^2.0.9",
        "jest": "^26.6.3",
        "cpy-cli": "^3.1.1",
        "del-cli": "^3.0.1",
        "typescript": "^4.1.5",
        "@types/jest": "^26.0.15",
        "@types/express": "^4.17.11",
        "@types/request-ip": "^0.0.35",
        "@types/ua-parser-js": "^0.7.35"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts"
    },
    "scripts": {
        "lint": "eslint src test --ext \".ts\" --fix",
        "type-check": "tsc --noEmit",
        "type-gen": "tsc --emitDeclarationOnly --declaration && cpy --parents --cwd=lib/declarations/src '**/*.d.ts' '../../../lib' && del-cli lib/declarations",
        "test": "jest",
        "build": "babel src -d lib --extensions \".ts\" && npm run type-gen"
    }
}
