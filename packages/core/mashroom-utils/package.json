{
    "name": "@mashroom/mashroom-utils",
    "description": "Shared utils for Mashroom plugins",
    "homepage": "https://www.mashroom-server.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonblocking/mashroom.git"
    },
    "license": "MIT",
    "version": "2.9.3",
    "main": "lib",
    "files": [
        "lib/**"
    ],
    "dependencies": {
        "find-process": "^1.4.10",
        "ip-filter": "^3.0.5",
        "kind-of": "^6.0.3",
        "request-ip": "^3.3.0",
        "ua-parser-js": "^1.0.40",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@types/express": "5.0.5",
        "@types/request-ip": "^0.0.41",
        "@types/ua-parser-js": "^0.7.39"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testRegex": "(\\.(test|spec))\\.ts",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./test-reports"
    },
    "scripts": {
        "lint": "eslint --fix",
        "type-check": "tsc --noEmit",
        "type-gen": "tsc --emitDeclarationOnly && cpy \"lib/declarations/src/*.d.ts\" \"lib\" && del-cli lib/declarations",
        "test": "jest",
        "build": "babel src -d lib --extensions \".ts\" && npm run type-gen"
    }
}
