    "scripts": {
        "setup": "npm install && lerna bootstrap -- --force && npm run build:core",
        "type-check": "lerna run type-check && flow check",
        "lint": "lerna run lint",
        "test": "lerna run test",
        "build:core": "nx build @mashroom/mashroom-utils && nx build @mashroom/mashroom && nx build @mashroom/mashroom-json-schemas && nx build @mashroom/mashroom-portal-ui-commons",
        "build:plugins": "lerna run build",
        "build": "npm run build:core && npm run type-check && npm run lint && npm run test && npm run build:plugins",
        "clean": "rimraf node_modules/ packages/core/*/dist/ packages/core/*/lib/ packages/core/*/node_modules/ packages/plugin-packages/*/dist/ packages/plugin-packages/*/node_modules/ packages/test/*/node_modules/ packages/test/*/data/ packages/test/*/log/",
        "release:prepare": "lerna version patch --exact --yes --force-publish && npm run clean && npm run setup && npm run build"
    }
